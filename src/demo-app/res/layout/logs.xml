<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:fillViewport="true">
		
	<LinearLayout	  
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent">
	  
	  <TextView 
	    android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_margin="5dp"
	  	android:textAppearance="@android:style/TextAppearance.Medium"
	  	android:gravity="center"	  	
	  	android:text="Click button to print logs on specific Log Level. You can inspect Logcat for results."/>
	  	  
	  <LinearLayout 
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content">
	  	
	  	<Button
	  		android:id="@+id/verboseButton"	  		
		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"		  	
		  	android:onClick="onPrintSingleClicked" />
	  
	  	<Button
	  		android:id="@+id/debugButton"
		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"		  	
		  	android:onClick="onPrintSingleClicked" />
	  	
	  </LinearLayout>
	  
	  <LinearLayout 
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content">
		
		  <Button
		    android:id="@+id/infoButton"
		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"		  	
		  	android:onClick="onPrintSingleClicked" />
		  	
		  <Button
		    android:id="@+id/warningButton"
		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"		  	
		  	android:onClick="onPrintSingleClicked" />
		  	
	  </LinearLayout>
	 
	  <LinearLayout 
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"> 
		 
	   	  <Button
	   	    android:id="@+id/errorButton"
		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"		  	
		  	android:onClick="onPrintSingleClicked" />
		  
		  <Button
		    android:id="@+id/fatalButton"
  		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"		  	
  		  	android:onClick="onPrintSingleClicked" />
  		  	
 	  </LinearLayout>
 	  
 	  <View 
 	  	android:layout_width="fill_parent"
 	  	android:layout_height="2dp"
 	  	android:background="#ffffffff" />
 	  
 	  <TextView 
	    android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_margin="5dp"
	  	android:textAppearance="@android:style/TextAppearance.Medium"
	  	android:gravity="center"	  	
	  	android:text="Select levels to print at once. You can inspect Logcat for results."/>
	  	  	  
	  <LinearLayout 
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content" >
	  	
	  	<CheckBox
	  	    android:id="@+id/verboseCheckBox"
		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"
		  	android:background="@color/verbose"
		  	android:gravity="center" />
	  
	  	<CheckBox
	  	    android:id="@+id/debugCheckBox"
		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"
		  	android:background="@color/debug"
		  	android:gravity="center" />
	  	
	  </LinearLayout>
	  
	  <LinearLayout 
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content" >
		
		  <CheckBox
		    android:id="@+id/infoCheckBox"
		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"
		  	android:background="@color/info"
		  	android:gravity="center" />
		  	
		  <CheckBox
		    android:id="@+id/warningCheckBox"
		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"
		  	android:background="@color/warning"
		  	android:gravity="center" />
		  	
	  </LinearLayout>
	 
	  <LinearLayout 
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content" > 
		 
	   	  <CheckBox
	   	    android:id="@+id/errorCheckBox"
		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"
		  	android:background="@color/error"
		  	android:gravity="center" />
		  
		  <CheckBox
		    android:id="@+id/fatalCheckBox"
  		  	android:layout_width="0dp"
		  	android:layout_weight="1"
		  	android:layout_height="wrap_content"
		  	android:background="@color/fatal"
		  	android:gravity="center" />
  		  	
 	  </LinearLayout>
 	  
 	  <Button
		  	android:layout_width="fill_parent"		  	
		  	android:layout_height="wrap_content"
		  	android:layout_marginTop="5dp"		  	
		  	android:text="Print"
		  	android:onClick="onPrintMultipleClicked" />
 	  
	</LinearLayout>
</ScrollView>