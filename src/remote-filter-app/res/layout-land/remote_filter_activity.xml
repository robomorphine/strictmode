	<fragment android:name="com.robomorphine.remotefilter.fragment.RemoteFilter"
		android:id="@+id/remoteFilter"		
		android:layout_width="0dp"
		android:layout_weight="0.6" 
		android:layout_height="fill_parent"	 >
		<!-- Preview: layout=@layout/remote_filter_fragment -->
	</fragment>
	
	<View 
		android:layout_width="2px"
		android:layout_height="fill_parent"		 
