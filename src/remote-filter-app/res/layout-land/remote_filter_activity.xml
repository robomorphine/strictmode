	<fragment android:name="com.robomorphine.remotefilter.fragment.RemoteFilterEditPanel"
		android:id="@+id/remoteFilterEditor"		
		android:layout_width="0dp"
		android:layout_weight="0.4" 
		android:layout_height="fill_parent">
