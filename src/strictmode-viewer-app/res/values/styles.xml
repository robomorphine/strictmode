<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TableKey" parent="android:Widget.Holo.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TableValue" parent="android:Widget.Holo.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/na</item>
    </style>
    
    <style name="TableImage" parent="android:Widget.Holo.TextView">
        <item name="android:layout_width">@dimen/histogram_sample_width</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">1px</item>
    </style>
    
    <style name="about_key" >         
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">@dimen/small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/large</item>
    </style>
    <style name="about_value" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/small</item>
    </style>
</resources>
